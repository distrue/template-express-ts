{
  "compilerOptions": {
    "target": "es5",
    "module": "es2020",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./build",
    "rootDir": "./src",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "baseUrl": "./src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": ["node_modules"]
}
